{
  "name": "grido",
  "version": "0.0.1",
  "homepage": "http://vilaboim.github.io/grido",
  "author": "Lucas Vilaboim <lucas@vilaboim.com> (http://vilaboim.com)",
  "description": "Grido is a Flexbox grid made between Star Wars Rebels and A New Hope (Han shot first!)",
  "main": "grido.styl",
  "repository": {
    "type": "git",
    "url": "https://github.com/vilaboim/grido.git"
  },
  "license": "MIT",
  "keywords": [
    "css",
    "stylus",
    "flexbox",
    "responsive",
    "framework"
  ],
  "bugs": {
    "url": "https://github.com/vilaboim/grido/issues"
  },
  "devDependencies": {
    "stylus": "^0.54.5"
  },
  "scripts": {
    "build": "npm run build-clean && mkdir css && npm run build-stylus",
    "build-clean": "rm -rf css",
    "build-stylus": "stylus grido.styl -o css/grido.css",
    "watch": "stylus -w grido.styl -o css/grido.css"
  },
  "files": [
    "css",
    "stylus",
    "grido.styl",
    "LICENSE",
    "README.md"
  ]
}
