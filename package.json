{
  "name": "grido",
  "version": "1.0.3",
  "homepage": "http://vilaboim.github.io/grido",
  "author": "Lucas Vilaboim <lucas@vilaboim.com> (http://vilaboim.com)",
  "description": "Grido is a grid made between Star Wars Rebels and A New Hope (Han shot first!)",
  "main": "grido.min.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/vilaboim/grido.git"
  },
  "license": "MIT",
  "keywords": [
    "css",
    "stylus",
    "flexbox",
    "responsive"
  ],
  "bugs": {
    "url": "https://github.com/vilaboim/grido/issues"
  },
  "devDependencies": {
    "chalk": "^4.1.0",
    "husky": "^5.1.3",
    "stylus": "^0.54.8"
  },
  "scripts": {
    "build": "stylus -c ./grido.styl -o ./grido.min.css",
    "build:dev": "stylus ./grido.styl -o ./grido.css",
    "watch": "stylus -w grido.styl ./grido.css",
    "commitmsg": "node scripts/verifyCommitMsg.js",
    "release:tags": "git push && git push --tags",
    "release:patch": "npm version patch && npm run release:tags",
    "release:minor": "npm version minor && npm run release:tags",
    "release:major": "npm version major && npm run release:tags"
  },
  "engines": {
    "yarn": "1",
    "npm": "6"
  }
}
